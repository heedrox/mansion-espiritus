{
  "name": "mansion-espiritus",
  "description": "Evita que el infierno se desate en la tierra. Un escape room para Google Assis basado en el juego de cartas de Mallory Mansion.",
  "scripts": {
    "lint": "eslint .",
    "serve": "firebase serve --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "mocha --require ./test/common.js --require source-map-support/register 'test/**/*.spec.js' test/**/*.spec.js",
    "tdd": "npm-watch test",
    "walkthrough": "node app/walkthrough/walkthrough.js",
    "walkthrough:watch": "npm-watch walkthrough"
  },
  "watch": {
    "walkthrough": {
      "patterns": [
        ".",
        "walkthrough",
        "intents",
        "lib",
        "scure"
      ],
      "extensions": "js",
      "quiet": true,
      "legacyWatch": true,
      "delay": 1000,
      "inherit": true
    },
    "test": {
      "patterns": [
        ".",
        "app",
        "data",
        "intents",
        "lib",
        "scure"
      ],
      "extensions": "js",
      "quiet": true,
      "legacyWatch": true,
      "delay": 1000,
      "inherit": true
    }
  },
  "dependencies": {
    "actions-on-google": "^2.12.0",
    "firebase-admin": "^8.6.1",
    "firebase-functions": "^2.2.0",
    "https-proxy-agent": "^3.0.0",
    "pluralize": "^7.0.0",
    "scure": "1.5.0",
    "scure-dialogflow": "1.5.1"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.26.0",
    "chai": "^4.2.0",
    "eslint": "^5.12.0",
    "eslint-plugin-promise": "^4.0.1",
    "mocha": "^6.2.2",
    "npm-watch": "^0.6.0",
    "sinon": "^7.5.0",
    "sinon-chai": "^3.3.0"
  },
  "private": true
}
